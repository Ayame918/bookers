<h1>Editing Book</h1>

<div class = "error">
 <% if @book.errors.any? %>
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2><%#エラーメッセージ%>
  <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
   <% end %>
  </ul>
<% end %>
</div>

<div class = "edit">
<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <div class = "field_edit">
   <label for="book_title">Title</label>
  <%= f.text_field :title %>
  </div>
 <div class = "field_edit">
   <label for="book_body">Body</label>
  <%= f.text_area :body %>
  </div>
  <div class = "submit_edit">
  <%= f.submit 'Update Book' %>
 　</div>
<% end %>
</div>
<p>
  <%= link_to "Show", book_path %>
  |
  <%= link_to "Back", books_path %>
</p>